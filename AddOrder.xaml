<Window x:Class="WalletWPF.AddOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WalletWPF"
        mc:Ignorable="d"
        Title="AddOrder" Height="360" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="10" Text="Nazwa"/>
        <TextBox Name="nameOfConstOrder" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Margin="10"/>
        <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="10" Text="Kwota"/>
        <TextBox Name="amountOfConstOrder" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Margin="10"/>
        <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="10" Text="Kategoria"/>
        <ComboBox Name="categoriesOfConstOrder" Grid.Row="2" Grid.Column="1" Margin="10" SelectionChanged="CategoriesOfConstOrder_SelectionChanged">
        </ComboBox>
        <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="10" Text="Podkategoria"/>
        <ComboBox Name="subcategoriesOfConstOrder" IsEnabled="False" Grid.Row="3" Grid.Column="1" Margin="10">
        </ComboBox>
        <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="10" Text="Powtórzenia wydatku"/>
        <ComboBox Name="periodicityOfConstOrder" Grid.Row="4" Grid.Column="1" Margin="10">
        </ComboBox>
        <Button Name="okButton" Grid.Row="5" Grid.Column="0" Width="70" HorizontalAlignment="Center" Margin="20" Click="OkButton_Click">OK</Button>
        <Button Grid.Row="5" Grid.Column="1" Width="80" HorizontalAlignment="Center" Margin="10">Anuluj</Button>
    </Grid>
</Window>
